<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FF0000"
    android:layout_height="match_parent">


    <TextView
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="OUR VISION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vision"/>


    <TextView
        android:gravity="left"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/white"
        android:text=" To be Port Moresbyâ€™s best food home delivery service at winning
        and keeping customers using modern and innovative methods via eCommerce and social media."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visio"/>

    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="PURPOSE STATEMENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purpose"/>

    <TextView
        android:gravity="left"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/white"
        android:text=" That the Lord Jesus Christ would be praised as we faithfully steward all that is entrusted to our care,
        and that we might bring a spirit of faith, hope and love to all those we encounter.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purpos"/>


    <Button
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:id="@+id/dialogButtonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok"/>

</LinearLayout>